{
    "extends": "@tsconfig/node10/tsconfig.json",
    "compilerOptions": {
        "lib": ["ES2018", "DOM"],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "pretty": true,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts",
        "**/node_modules/*"
    ]
}